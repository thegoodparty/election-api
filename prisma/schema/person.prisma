model Person {
  id String @id @db.Uuid
  brHashId     String?        @map("br_hash_id")
  brDatabaseId    Int?         @map("br_database_id")
  createdAt     DateTime     @map("created_at")
  updatedAt     DateTime     @map("updated_at")
  slug          String?

  bioText       String?      @map("bio_text")
  firstName     String?      @map("first_name")
  fullName      String       @map("full_name")
  lastName      String?      @map("last_name")
  middleName    String?      @map("middle_name")
  nickname      String?
  suffix        String?

  // One Person -> Many Candidacies
  candidacies   Candidacy[]

  // One Person -> Many OfficeHolders
  officeHolders OfficeHolder[]

  // One Person -> Many Contacts (polymorphic approach)
  contacts      Contact[]
  
  @@map("person")
} 