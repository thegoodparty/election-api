generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
  previewFeatures = ["prismaSchemaFolder"]
}

generator json {
  provider = "prisma-json-types-generator"
}

generator erd {
  provider = "prisma-erd-generator"
  ignoreEnums = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
