enum Sentiment {
  CON
  PRO  
  @@map("sentiment")
}

enum EndorsementStatusTypeField {
  ACTIVE
  NOT_FOUND
  PENDING

  @@map("endorsement_status_type_field")
}

model Endorsement {
  id String @id @db.Uuid
  brHashId     String?                    @map("br_hash_id")
  brDatabaseId    Int?                    @map("br_database_id")
  createdAt     DateTime                  @map("created_at")
  updatedAt     DateTime                  @map("updated_at")
  
  endorser      String?
  recommendation Sentiment?
  status        EndorsementStatusTypeField
  
  // Organization relationship (optional)
  organizationId String?                     @map("organization_id") @db.Uuid
  organization   Organization?            @relation(fields: [organizationId], references: [id])
  
  // Candidacy relationship
  candidacyId    String?                     @map("candidacy_id") @db.Uuid
  candidacy      Candidacy?               @relation(fields: [candidacyId], references: [id])
  
  @@map("endorsement")
} 